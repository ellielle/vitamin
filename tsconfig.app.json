{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/*.test.*",
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    //    "module": "esnext",
    //    "moduleResolution": "node",
    //    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    //    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [

    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}
